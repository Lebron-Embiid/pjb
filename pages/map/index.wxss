/* pages/map/index.wxss */
.map_container{
  position: absolute;
  top: 0; /* 45px */
  bottom: 0;
  left: 0;
  right: 0;
}
.map_container.more{
  bottom: 100px;
}
.map{
  width: 100%;
  height: 100%;
}
.map_text{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0px;
  height: 100px;
  background: #fff;
  padding: 0 15px;
  font-size: 24rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.map_left{
  width: 70%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}
.map_left view{
  display: block;
  width: 100%;
}
.map_left text{
  margin: 10rpx 0;
  font-size: 24rpx;
}
.h1{
  margin: 10rpx 0;
}

.section{
  position: fixed;
  left: 0;
  top: 0;
  padding: 20rpx;
  box-sizing: border-box;
  color: #333333;
  font-size: 24rpx;
  background: #ffffff;
}
.map_shadow{
  position: fixed;
  right: 20rpx;
  top: 20rpx;
  background: #ffffff;
  border-radius: 50%;
  padding: 20rpx;
}
.map_shadow cover-image{
  width: 50rpx;
  height: 50rpx;
}
.section input{
  width:100%;
  /* position: absolute; */
  /* left: 48rpx; */
  /* top: 18rpx; */
  border:1px solid #c3c3c3;
  /* height:25px; */
  border-radius: 3px;
  padding: 0 10rpx;
  font-size: 24rpx;
}
.text_box{
  margin: 10px 25px;
  border-bottom:1px solid #c3c3c3;
  padding-bottom:10px
}
.btn-Wc{
  margin-right: 10rpx;
  position: absolute;
  top: 16rpx;
  right: 20rpx;
}
.img_Ss{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 20rpx;
  left: 10rpx;
  }