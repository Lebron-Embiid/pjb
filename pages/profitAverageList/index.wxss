/* pages/profitList/index.wxss */
.profit_box{
  padding: 30rpx;
  box-sizing: border-box;
}
.table_box{
  border: 1px solid #999999;
  box-sizing: border-box;
  border-bottom: 0;
  margin-top: 30rpx;
}
.table_item{
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: nowrap;
  text-align: center;
  padding: 10rpx 0;
  border-bottom: 1px solid #cccccc;
}
.table_th{
  color: #333333;
  font-size: 32rpx;
  width: 25%;
}
.table_td{
  color: #999999;
  font-size: 28rpx;
  width: 25%;
}
ec-canvas{
  display: block;
  width: 100%;
  height: 500px;
}

.chart_btn{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}
.chart_btn view{
  width: 20%;
  text-align: center;
}
.chart_btn text{
  color: #333333;
  font-size: 28rpx;
  display: block;
  padding-bottom: 20rpx;
  border-bottom: 5rpx solid transparent;
}
.chart_btn text.active{
  color: #ff0000;
  border-bottom: 5rpx solid #ff0000;
}