/* pages/buildList/index.wxss */
.build_box{
  padding-bottom: 150rpx;
  box-sizing: border-box;
}
.house_item{
  padding: 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f1f1f1;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.house_item image{
  width: 100rpx;
  height: 100rpx;
  background-color: #cccccc;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.house_box{
  width: 70%;
  font-size: 22rpx;
}
.house_edit{
  width: 30%;
  text-align: right;
}
.house_edit button{
  font-size: 24rpx;
  margin-bottom: 5rpx;
}

.user_code_box{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  justify-content: center;
  align-items: center;
  z-index: 10;
  background: rgba(0,0,0,.5);
  display: none;
}
.user_code_box.show{
  display: flex;
}
.user_code_box image{
  display: block;
  width: 400rpx;
  height: 400rpx;
}