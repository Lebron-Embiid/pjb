/* pages/shipment/index.wxss */
ec-canvas{
  display: block;
  width: 100%;
  height: 500px;
}
.chart_btn{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.chart_btn view{
  width: 20%;
  text-align: center;
}
.chart_btn text{
  color: #333333;
  font-size: 28rpx;
  display: block;
  padding-bottom: 20rpx;
  border-bottom: 5rpx solid transparent;
}
.chart_btn text.active{
  color: #ff0000;
  border-bottom: 5rpx solid #ff0000;
}